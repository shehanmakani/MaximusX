version: "3.8"

services:
  server:
    build:
      context: ./server
      dockerfile: Dockerfile.jetson
    ports:
      - "8000:8000"
    environment:
      - VECTOR_DB_URL=http://qdrant:6333
      - MODEL_HOST=http://localhost:11434
    deploy:
      resources:
        reservations:
          devices:
            - capabilities: [gpu]
    runtime: nvidia
    volumes:
      - ./server/models:/app/models

  qdrant:
    image: qdrant/qdrant:v1.3.0-arm64
    ports:
      - "6333:6333"
    volumes:
      - qdrant_data:/qdrant/storage

  ollama:
    image: ollama/ollama:latest
    runtime: nvidia
    volumes:
      - ollama_data:/root/.ollama
    ports:
      - "11434:11434"

volumes:
  qdrant_data:
  ollama_data:
